<h2>設定</h2>
<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "ユーザーネーム" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "パスワード" %> <span>(変更しない場合は空欄のまま)</span>
    <% if @minimum_password_length %>
      <span>(<%= @minimum_password_length %>文字以上)</span>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(再入力)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "現在のパスワード" %> <span>(本人確認のため現在のパスワードを入力してください)</span><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div><br />

  <div class="actions">
    <%= f.submit "送信" %>
  </div>
<% end %>
<%= link_to "ユーザーページへ戻る", :back %>
