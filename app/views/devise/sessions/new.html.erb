<%= provide(:title, "ログイン") %>
<h2>ログイン</h2>

<%= form_with(model: @user, url: session_path(@user), id: "new_user", class: "new_user", local: true) do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, id: 'rspec_check_box'  %>
      <%= f.label :remember_me, "ログイン状態を保存する" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "送信" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
